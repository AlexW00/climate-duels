<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="StandardTextAppearance">
        <item name="android:textColor">@color/blck</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewHeader1Appearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:elegantTextHeight">false</item>
    </style>

    <style name="TextViewHeader2Appearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:elegantTextHeight">false</item>
    </style>

    <style name="TextViewTitleAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ButtonAppearance">
        <item name="android:height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/whte</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableTint">@color/light_green</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:foregroundTint">@color/whte</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="ProgressBarApperance">
        <item name="height">10dp</item>
    </style>
</resources>